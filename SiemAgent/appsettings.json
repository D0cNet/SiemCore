{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "SiemCore": {
    "ApiUrl": "https://localhost:5001",
    "ApiKey": ""
  },
  "Agent": {
    "AgentId": "",
    "AgentVersion": "1.0.0",
    "EventBatchSize": 100,
    "EventFlushIntervalSeconds": 30,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "MaxCachedEvents": 10000,
    "EnableLocalAnalysis": true,
    "EnableEventFiltering": true,
    "LogLevel": "Information",
    "HealthCheckIntervalSeconds": 60,
    "ConfigurationRefreshIntervalSeconds": 300,
    "Collectors": [
      {
        "Name": "File Log Collector",
        "Type": "FileLog",
        "Enabled": true,
        "CollectionIntervalSeconds": 60,
        "Settings": {
          "LogPaths": [
            "/var/log/*.log",
            "/var/log/syslog",
            "/var/log/auth.log"
          ]
        },
        "IncludePatterns": [],
        "ExcludePatterns": [
          "DEBUG",
          "TRACE"
        ],
        "SeverityFilter": ""
      },
      {
        "Name": "Windows Event Log Collector",
        "Type": "WindowsEventLog",
        "Enabled": false,
        "CollectionIntervalSeconds": 30,
        "Settings": {
          "LogName": "Security",
          "Query": "*"
        },
        "IncludePatterns": [],
        "ExcludePatterns": [],
        "SeverityFilter": ""
      },
      {
        "Name": "Syslog Collector",
        "Type": "Syslog",
        "Enabled": false,
        "CollectionIntervalSeconds": 1,
        "Settings": {
          "Port": 514,
          "Protocol": "UDP"
        },
        "IncludePatterns": [],
        "ExcludePatterns": [],
        "SeverityFilter": ""
      }
    ]
  },
  "EventCache": {
    "DatabasePath": "events_cache.db"
  }
}
